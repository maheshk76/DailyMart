@{
    ViewBag.Title = "Forgot Password Confirmation";
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="title-section">
                <h2 class="title">
                    @ViewBag.Title
                </h2>
                <hr />
            </div>
            <div>
                <h4>
                    Please check your email to reset your password.
                </h4><br />
                <h4>Didn't got an email? <a href="@Url.Action("ForgotPassword")">send again</a></h4>
            </div>
            <br /><br />
        </div>
    </div>
</div>

