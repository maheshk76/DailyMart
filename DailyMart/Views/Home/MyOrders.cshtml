                                                    </li>
                                                </ul>

                                                <form class="card p-2">
                                                    <div class="form-group">
                                                        <label for="status">Status</label>
                                                        <input type="text" class="form-control" readonly value="@item.OrderStatus">

                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <hr />
                                    }


                                </div>
                            </div><!-- /.content-inner -->
                            <div class="content-inner">
                                <div class="container p-5">
                                    @if (!(Model.PreviousOrders.ToList().Count() > 0))
                                    {
                                        <div class="alert alert-danger text-center h5" role="alert">
                                            Can't Find Any Cancelled Orders!
                                        </div>
                                    }
                                    @foreach (var item in Model.PreviousOrders.ToList())
                                    {

                                        <div class="row">
