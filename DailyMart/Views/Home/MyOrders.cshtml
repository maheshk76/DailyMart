                                                    <div class="form-group">
                                                        <label for="status">Status</label>
                                                        <input type="text" class="form-control" readonly value="@item.OrderStatus">

                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <hr />
                                    }


                                </div>
                            </div><!-- /.content-inner -->
                        </div>
                </div>
            </div>
        </div>
    </div>
        </div>
</section><!-- /.shop-detail-content -->
