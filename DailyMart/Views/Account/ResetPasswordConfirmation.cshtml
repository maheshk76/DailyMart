@{
    ViewBag.Title = "Reset password confirmation";
}
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="title-section">
                <h2 class="title">
                    @ViewBag.Title
                </h2>
                <hr />
            </div>
            <div>
                <h4>
                    Your password has been reset.
                </h4><br />
                <h4>
                    Please @Html.ActionLink("click here to log in", "login", "account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </h4>  <br /><br />          
            </div>
        </div>
    </div>
</div>