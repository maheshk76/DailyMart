@model IEnumerable<DailyMart.Models.Message>

@{
    ViewBag.Title = "Messages";
   Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-3">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr><td>No Messages Found!</td></tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedOn)
                                @if (!item.isRead)
                                {
                                    <span class="badge badge-primary">New</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Subject)
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details","Message",new { id = item.ID })" class="btn btn-outline-primary "><i class="fa fa-book-open"></i></a> | 
                                <button class="btn btn-outline-danger deleteMsgBtn" data-id="@item.ID"><i class="fa fa-trash-alt"></i></button>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(".deleteMsgBtn").click(function () {
        swal({
            title: "Confirm?",
            text: "Are you sure you want to delete this Message?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
			if (willDelete) {
				$.ajax({
					type: 'POST',
					url: '@Url.Action("Delete", "Message")',
					data: {
						ID: $(this).attr('data-id')
					}
				})
				.done(function (response) {


					swal(response.Message, {
						icon: "success",
                    });
                    setTimeout(function () { window.location.reload(); }, 2000);
				})
				.fail(function (XMLHttpRequest, textStatus, errorThrown) {
					   swal("Error", "Please Try Again!", "warning");
				});

			}
        });

    });


</script>